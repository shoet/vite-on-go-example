.DEFAULT_GOAL := help

.PHONY: build
build: ## Build docker image to local development
	npm run build && go build -o bin/server .

.PHONY: help
help: ## Show options
	@grep -E '^[a-zA-Z_-]+:.*?## .*$$' $(MAKEFILE_LIST) | \
		awk 'BEGIN {FS = ":.*?## "}; {printf "\033[36m%-20s\033[0m %s\n", $$1, $$2}'
